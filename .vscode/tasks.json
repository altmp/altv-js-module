{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build client",
      "type": "shell",
      "command": "cd client && build-debug.bat",
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Build server",
      "type": "shell",
      "command": "cd server && ./build.sh",
      "windows": {
        "command": "cd server && build.bat"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
        "label": "Update C++ SDK",
        "type": "shell",
        "command": "cd shared/deps/cpp-sdk && git pull origin master",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false
        }
    }
  ]
}
